<?xml version="1.0" encoding="UTF-8"?>

<?xml-stylesheet type="text/xsl" href="game.xsl"?>

<game id="dresden20">
  <name>Dresden 20</name>

  <location type="free" id="map">
    <face type="image">Dresden 20 map v1r.JPG</face>
  </location>


  <basePiece id="card">
    <tags>card</tags>
    <face type="image" name="back">CBack.PNG</face>
  </basePiece>

  <location type="single" id="deck">
    <piece id="c1" base="card">
      <face type="image" name="front">CE1.PNG</face>
    </piece>
    <piece id="c2" base="card">
      <face type="image" name="front">CE2.PNG</face>
    </piece>
    <piece id="c3" base="card">
      <face type="image" name="front">CE2.PNG</face>
    </piece>
    <piece id="c4" base="card">
      <face type="image" name="front">CE3.PNG</face>
    </piece>
  </location>

  <location type="single" id="discard">
  </location>

  <basePiece id="counter">
    <tags>counter</tags>
  </basePiece>

  <!-- TODO: base attribute for basePiece is not supported (Not needed?) -->
  <basePiece id="russian" base="counter">
    <tags>allied russian</tags>
    <face type="image" name="back">RUMask.PNG</face>
  </basePiece>

  <basePiece id="prussian" base="counter">
    <tags>allied prussian</tags>
    <face type="image" name="back">PRMask.PNG</face>
  </basePiece>

  <basePiece id="french" base="counter">
    <tags>french</tags>
    <face type="image" name="back">FMask.PNG</face>
  </basePiece>

  <location type="fixed" id="countersheet">
    <piece id="rubi" base="russian">
      <tags>first</tags>
      <face type="image" name="front">RUBI.PNG</face>
    </piece>
    <piece id="rubii" base="russian">
      <face type="image" name="front">RUBII.PNG</face>
    </piece>
    <piece id="rubiii" base="russian">
      <face type="image" name="front">RUBIII.PNG</face>
    </piece>
    <piece id="turn">
      <face type="image">ALGTurn.PNG</face>
    </piece>
  </location>

</game>

